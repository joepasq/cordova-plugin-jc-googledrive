<?xml version='1.0' encoding='utf-8'?>
<widget id="gr.jcdenton.GoogleDriveDevelopment" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>jc-googledrive-dev</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-media-capture" spec="^3.0.1" />
    <plugin name="cordova-plugin-jc-googledrive" spec="~1.1.0">
        <variable name="IOS_REVERSED_CLIENT_ID" value="com.googleusercontent.apps.140446679379-l1k2hs78a4jel7lkmc7de9c0v5ffghb7" />
        <variable name="IOS_CLIENT_ID" value="140446679379-l1k2hs78a4jel7lkmc7de9c0v5ffghb7.apps.googleusercontent.com" />
    </plugin>
    <engine name="android" spec="^7.0.0" />
</widget>
